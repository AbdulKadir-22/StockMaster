{
	"info": {
		"_postman_id": "stockmaster-backend-id",
		"name": "StockMaster API",
		"description": "Collection for testing StockMaster Inventory System",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Auth",
			"item": [
				{
					"name": "Register Admin",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Super Admin\",\n    \"email\": \"admin_{{$timestamp}}@stockmaster.com\",\n    \"password\": \"password123\",\n    \"role\": \"admin\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"register"
							]
						}
					},
					"response": []
				},
				{
					"name": "Login (Auto-Set Token)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.success) {",
									"    pm.environment.set(\"token\", jsonData.data.token);",
									"    console.log(\"Token set successfully\");",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"admin@stockmaster.com\",\n    \"password\": \"password123\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"login"
							]
						}
					},
					"response": []
				},
				{
					"name": "Get Me",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/auth/me",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"me"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "2. Setup (Warehouses & Products)",
			"item": [
				{
					"name": "Create Warehouse",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.success) {",
									"    pm.environment.set(\"warehouse_id\", jsonData.data._id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Central Warehouse {{ $randomInt }}\",\n    \"code\": \"WH-{{$randomInt}}\",\n    \"address\": \"123 Main St\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/warehouses",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"warehouses"
							]
						}
					},
					"response": []
				},
				{
					"name": "Create Product",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.success) {",
									"    pm.environment.set(\"product_id\", jsonData.data._id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Test Widget {{ $randomInt }}\",\n    \"sku\": \"SKU-{{$randomInt}}\",\n    \"category\": \"Electronics\",\n    \"uom\": \"pcs\",\n    \"reorderLevel\": 10\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/products",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"products"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "3. Operations (Transactions)",
			"item": [
				{
					"name": "A. Create Receipt (Stock In)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.success) {",
									"    pm.environment.set(\"receipt_id\", jsonData.data._id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"receiptNumber\": \"REC-{{$timestamp}}\",\n    \"supplier\": \"Acme Corp\",\n    \"warehouse\": \"{{warehouse_id}}\",\n    \"items\": [\n        { \"product\": \"{{product_id}}\", \"quantity\": 100 }\n    ]\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/receipts",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"receipts"
							]
						}
					},
					"response": []
				},
				{
					"name": "B. Validate Receipt",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{base_url}}/receipts/{{receipt_id}}/validate",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"receipts",
								"{{receipt_id}}",
								"validate"
							]
						}
					},
					"response": []
				},
				{
					"name": "C. Create Delivery (Stock Out)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.success) {",
									"    pm.environment.set(\"delivery_id\", jsonData.data._id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"deliveryNumber\": \"DEL-{{$timestamp}}\",\n    \"customer\": \"John Doe\",\n    \"warehouse\": \"{{warehouse_id}}\",\n    \"items\": [\n        { \"product\": \"{{product_id}}\", \"quantity\": 20 }\n    ]\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/deliveries",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"deliveries"
							]
						}
					},
					"response": []
				},
				{
					"name": "D. Validate Delivery",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{base_url}}/deliveries/{{delivery_id}}/validate",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"deliveries",
								"{{delivery_id}}",
								"validate"
							]
						}
					},
					"response": []
				}
			]
		},
		{
			"name": "4. Reports",
			"item": [
				{
					"name": "Get Dashboard Summary",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/dashboard/summary",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"dashboard",
								"summary"
							]
						}
					},
					"response": []
				},
				{
					"name": "Get Ledger",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/ledger",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"ledger"
							]
						}
					},
					"response": []
				}
			]
		}
	],
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{token}}",
				"type": "string"
			}
		]
	},
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:5000",
			"type": "string"
		}
	]
}